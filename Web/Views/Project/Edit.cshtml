@model ProjectViewModel
@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<h1>Edit</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" value="@Model.Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatedAt"></label>
        <input class="form-control" asp-for="CreatedAt" value="@Model.CreatedAt.Date.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="CreatedAt"></span>
    </div>
    <div>
        <label>Authors</label>
        @Html.ListBoxFor(a => a.AuthorsId, (MultiSelectList)ViewBag.Authors, new { @class = "custom-select", multiple = "" })
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-primary" href='javascript:history.go(-1)' role="button">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
