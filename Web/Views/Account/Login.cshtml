@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="validation" asp-validation-summary="All"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input id="password" class="form-control" asp-for="Password" />
            @await Html.PartialAsync("_ShowPasswordCheckBoxPartial", "password")
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <div>
                <button type="submit" class="btn btn-primary">Login</button>
                <a class="btn btn-outline-secondary" asp-action="SignIn" role="button">SignIn</a>
            </div>
            <a class="btn-sm" asp-action="ForgotPassword" role="button">Forgot password?</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}