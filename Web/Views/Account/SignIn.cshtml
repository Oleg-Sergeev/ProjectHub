@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}


<h1>Sign in</h1>

<div class="container">
    <div class="validation" asp-validation-summary="All"></div>
    <form asp-action="SignIn">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input id="password" class="form-control" asp-for="Password" />
            @await Html.PartialAsync("_ShowPasswordCheckBoxPartial")
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input id="confirmPassword" class="form-control" asp-for="ConfirmPassword" />
            @await Html.PartialAsync("_ShowPasswordCheckBoxPartial", "confirmPassword")
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Sign In</button>
            <a class="btn btn-outline-secondary" asp-action="Login" role="button">Login</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}