@model Author
@{
    ViewData["Title"] = $"Delete {Model.FullName}";
}

<h1>Delete</h1>

<div>
    <p>Are you sure you want detete this author?</p>

    <div class="container text-left" style="background-color:#eee">
        <h2>@Model.FullName</h2>
        <p>
            Projects:
            @foreach (var project in Model.Projects)
            {
                <div class="w-auto">
                    @Html.RouteLink(project.Name, new { controller = "Project", action = "About", id = project.Id })
                </div>
            }
        </p>

        <a class="btn btn-primary" href="@Context.Request.Headers["Referer"]" role="button">Cancel</a>
        <form class="d-inline" method="post">
            <button class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id" role="button">Delete</button>
        </form>
    </div>
</div>