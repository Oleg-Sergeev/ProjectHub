<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav justify-content-end flex-grow-1">
        @if (Context.User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="mx-1 btn btn-outline-secondary" asp-controller="Account" asp-action="Logout" role="button">Logout</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="mx-1 btn btn-outline-primary" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" role="button">Login</a>
            </li>
            <li class="nav-item">
                <a class="mx-1 btn btn-outline-secondary" asp-controller="Account" asp-action="SignIn" role="button">SignIn</a>
            </li>
        }
    </ul>
</div>